<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageView
            android:id="@+id/appDetailedImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/appScreenshots"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/appDetailedName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Name"
            android:fontFamily="@font/vksansdisplaymedium"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vksansdisplayregular"
            android:text="Описание:"
            android:layout_marginTop="8dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/appDetailedDescription"
            android:layout_width="wrap_content"
            android:fontFamily="@font/vksansdisplayregular"
            android:layout_height="wrap_content"
            android:text="App Description"
            android:layout_marginTop="8dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/Downloads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vksansdisplayregular"
            android:text="Количество скачиваний:"
            android:layout_marginTop="8dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/appDownloads"
            android:layout_width="wrap_content"
            android:fontFamily="@font/vksansdisplayregular"
            android:layout_height="wrap_content"
            android:text="App Downloads"
            android:layout_marginTop="8dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/Author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vksansdisplayregular"
            android:text="Автор:"
            android:layout_marginTop="8dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/appAuthor"
            android:layout_width="wrap_content"
            android:fontFamily="@font/vksansdisplayregular"
            android:layout_height="wrap_content"
            android:text="App Author"
            android:layout_marginTop="8dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/Version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vksansdisplayregular"
            android:text="Версия приложения:"
            android:layout_marginTop="8dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/appVersion"
            android:layout_width="wrap_content"
            android:fontFamily="@font/vksansdisplayregular"
            android:layout_height="wrap_content"
            android:text="App version"
            android:layout_marginTop="8dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/Tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vksansdisplayregular"
            android:text="Теги:"
            android:layout_marginTop="8dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/appTags"
            android:layout_width="wrap_content"
            android:fontFamily="@font/vksansdisplayregular"
            android:layout_height="wrap_content"
            android:text="App tags"
            android:layout_marginTop="8dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/Age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vksansdisplayregular"
            android:text="Возрастное ограничение:"
            android:layout_marginTop="8dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/appAge"
            android:layout_width="wrap_content"
            android:fontFamily="@font/vksansdisplayregular"
            android:layout_height="wrap_content"
            android:text="App age"
            android:layout_marginTop="8dp"
            android:textSize="16sp"/>
    </LinearLayout>
</ScrollView>
