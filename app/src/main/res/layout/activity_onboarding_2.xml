<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8024C0"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:background="#8024C0">

        <Button
            android:id="@+id/btnSkip"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#F5F5F5"
            android:text="x"
            android:fontFamily="@font/vksansdisplayregular"
            android:textColor="@android:color/black"
            app:cornerRadius="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <RelativeLayout
            android:id="@+id/distance_5"
            android:layout_width="378dp"
            android:layout_height="107dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/rustore_pattern"
                android:layout_centerInParent="true"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/distance_2"
            android:layout_width="380dp"
            android:layout_height="66dp" />

        <TextView
            android:id="@+id/main_text_on2"
            android:layout_width="381dp"
            android:layout_height="56dp"
            android:textSize="24sp"
            android:gravity="center"
            android:fontFamily="@font/vksansdisplaymedium"
            android:lineSpacingExtra="-2sp"
            android:text="Подписка и покупки в один клик"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/text_on2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="14sp"
            android:fontFamily="@font/vksansdisplayregular"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="0sp"
            android:text="Платите как вам удобно - картой, через СБП или с телефона. Все варианты под рукой."
            android:textColor="@android:color/white"/>

        <RelativeLayout
            android:id="@+id/distance_2"
            android:layout_width="379dp"
            android:layout_height="145dp"
            tools:ignore="DuplicateIds" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:fontFamily="@font/vksansdisplayregular"
            android:text="Круто"
            android:textColor="@android:color/holo_purple"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>